<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/bg"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:id="@+id/homeScreen"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:backgroundTint="?attr/colorControlHighlight"
            android:layout_height="30dp"
            android:src="@drawable/home_add"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="18sp"
            android:text="Set to Home Screen"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorControlHighlight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:id="@+id/lockScreen"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:backgroundTint="?attr/colorControlHighlight"
            android:layout_height="30dp"
            android:src="@drawable/lock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="18sp"
            android:text="Set to Lock Screen" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorControlHighlight"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/both"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:backgroundTint="?attr/colorControlHighlight"
            android:layout_height="30dp"
            android:src="@drawable/home_lock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="18sp"
            android:text="Set to Home &amp; Lock Screens" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorControlHighlight"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/close"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:backgroundTint="?attr/colorControlHighlight"
            android:layout_height="30dp"
            android:src="@drawable/close"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="18sp"
            android:text="Close" />

    </LinearLayout>

</LinearLayout>